<%- include('includes/head') %>
<title>Academic Maps - Signin</title>
</head>

<body>
  <section class="container">
    <%- include('includes/nav') %>
    <%- include('includes/dark-mode-btn') %>

    <div class="content">
      <form action="/login" method="post" class="form login-form">
        <h1 class="form-title">Entrar na conta</h1>
        <%- include('includes/modals/msg-modal') %>

        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="underlay" autofocus>
        <small class="input-err-msg hidden" id="email-err">Email invÃ¡lido!</small>

        <label for="password">Senha</label>
        <div class="password-input">
          <input type="password" name="password" id="password" class="pi-input underlay">
          <div class="show-password">
            <ion-icon name="eye" class="sp-icon"></ion-icon>
            <ion-icon name="eye-off" class="sp-icon-off hidden"></ion-icon>
            <div class="sp-over"></div>
          </div>
        </div>
        <small class="input-err-msg hidden" id="password-err">A senha deve conter entre 8 e 20 caracteres!</small>

        <button type="submit" class="btn submit">Entrar</button>
      </form>
    </div>

  </section>

  <%- include('includes/footer') %>